<beans>

    <bean id="expired-content-report-writer" class="me.anonis.alf.expirable.beans.ExpiredContentReportWriter">
        <property name="nodeService">
            <ref bean="NodeService" />
        </property>
        <property name="searchService">
            <ref bean="SearchService" />
        </property>
        <property name="contentService">
            <ref bean="ContentService" />
        </property>
        <property name="reportFolderPath">
            <value>/${spaces.company_home.childname}/${spaces.dictionary.childname}/app:expirable_content_reports</value>
        </property>
    </bean>

    <bean id="notify-expired-content" class="me.anonis.alf.expirable.actions.NotifyExpiredContent" parent="action-executer">
        <property name="nodeService">
            <ref bean="NodeService" />
        </property>
        <property name="searchService">
            <ref bean="SearchService" />
        </property>
        <property name="reportWriter">
            <ref bean="expired-content-report-writer" />
        </property>
    </bean>

    <bean id="me.anonis.alf.expirable.jobs.NotifyExpiredContentScheduledJobExecuter"
          class="me.anonis.alf.expirable.jobs.NotifyExpiredContentScheduledJobExecuter">
        <property name="serviceRegistry">
            <ref bean="ServiceRegistry" />
        </property>
    </bean>

    <bean id="me.anonis.alf.expirable.jobs.notifyExpiredContent.jobDetail" class="org.springframework.scheduling.quartz.JobDetailBean">
        <property name="jobClass">
            <value>me.anonis.alf.expirable.jobs.NotifyExpiredContentScheduledJob</value>
        </property>
        <property name="jobDataAsMap">
            <map>
                <entry key="jobExecuter">
                    <ref bean="me.anonis.alf.expirable.jobs.NotifyExpiredContentScheduledJobExecuter" />
                </entry>
                <entry key="jobLockService">
                    <ref bean="jobLockService" />
                </entry>
            </map>
        </property>
    </bean>

    <bean id="me.anonis.alf.expirable.jobs.notifyExpiredContent.trigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail">
            <ref bean="me.anonis.alf.expirable.jobs.notifyExpiredContent.jobDetail" />
        </property>
        <property name="cronExpression">
            <value>${me.anonis.alf.expirable.jobs.notifyExpiredContent.cronexpression}</value>
        </property>
        <property name="startDelay">
            <value>${me.anonis.alf.expirable.jobs.notifyExpiredContent.cronstartdelay}</value>
        </property>
    </bean>

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="me.anonis.alf.expirable.jobs.notifyExpiredContent.trigger"/>
            </list>
        </property>
    </bean>
</beans>
